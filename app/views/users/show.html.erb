<h6>Profile ID #: <%= @user.id %></h6>
<h5>Welcome, <%= @user.first_name %> <%= @user.last_name %>!</h5><br/>

<!-- Create own playdate -->
<% if current_user.id == @user.id %>
	<%= link_to "Create Playdate", new_playdate_path, :class => "btn btn-block btn-outline-dark" %>
<% end %>
<br />

<!-- Display own kids under user profile -->
<div class="container-fluid">
  <div class="container">
		<h4 class="text-center">Playdates organized by <%= @user.first_name %>:</h4><br/>
			<div class="card card-shadow">
				<div class="card-body text-center">
					<% @user.playdates.each do |playdate| %>
						<li>Date & Time:<%= playdate.datetime %></li>
						<li>Title: <%= playdate.title %></li>
						<li>Location: <%= playdate.location %></li>
						<% if @user.id == current_user.id || @user.role == "admin" %>
							<!-- Only make available full address to attendees & admin -->
							<li>Address: <%= playdate.address %></li>
							<%= link_to 'Edit Playdate', edit_playdate_path(playdate.id), :role => "button", :class => "btn btn-block btn-md btn-outline-dark" %>
							<%= link_to 'Delete Playdate', playdate_path(playdate.id), method: :delete, remote: true, :role => "button", :class => "btn btn-block btn-md btn-outline-dark", data: { confirm: 'Are you sure you want to delete this playdate?' } %><br/>
						<% end %>
					<% end %>
				</div>
			</div>
	</div>
</div>

<!-- Display playdates attending -->

<!-- Display own kids under user profile -->
<div>
<h4><%= @user.first_name %>'s Children:</h4>
<% @user.kids.each do |kid| %>
	<li><%= kid.name %></li>
	<li><%= kid.age %></li>
	<li><%= kid.gender %></li><br/>
<% end %>
</div>

<!-- Set condition so only user can add kids to own profile -->
<% if current_user.id == @user.id %>
	<%= link_to "Add Child", new_kid_path, :class => "btn btn-block btn-outline-dark" %>
<% end %>
<br />