<div class="container-fluid">
  <div class="review container"> 
    <div class="title">
      <h2>Create a Review</h2>
    </div>
		<%= form_for @review, url: playdate_reviews_path do |form| %>
			<div>
				<%= form.label :title %>
				<%= form.text_field :title, :required => "true", :autocomplete => "off" %>
			</div>

			<div class="mt-3">
				<%= form.label :description %>
				<%= form.text_field :description, :required => "true", :autocomplete => "off" %>
			</div>

			<div class="mt-3">
			  <%= form.label :rating %>
			</div>

			<div class="rating">
				<input type="radio" name="review[stars]" value="5" id="star-1"><label for="star-1"></label>
				<input type="radio" name="review[stars]" value="4" id="star-2"><label for="star-2"></label>
				<input type="radio" name="review[stars]" value="3" id="star-3"><label for="star-3"></label>
				<input type="radio" name="review[stars]" value="2" id="star-4"><label for="star-4"></label>
				<input type="radio" name="review[stars]" value="1" id="star-5"><label for="star-5"></label>
			</div>

			<%= form.submit :class => "sign-up-submit btn btn-outline-dark btn-block mt-3" %>
		  <%= link_to "Back", user_path(current_user.id), :role => "button", :class => "btn btn-outline-dark btn-block" %>
		<% end %>
	</div>
</div>